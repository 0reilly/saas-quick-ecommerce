{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "Ecommerce backend application built with Node.js, Express, and MongoDB",
  "main": "index.js",
  "scripts": {
    "start": "pnpm run build && pnpm run dev",
    "build": "tsc && tsc --module commonjs --outDir dist --removeComments --sourceMap --inlineSourceMap --inlineSources --declaration --emitDeclarationOnly",
    "dev": "nodemon dist/index.js",
    "test": "jest",
    "lint": "eslint . --fix",
    "ci:build": "pnpm run build",
    "test:unit:ci": "jest --coverage",
    "docker:build": "docker build . -t your-username/ecommerce-backend:latest",
    "docker:push": "docker push your-username/ecommerce-backend:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ecommerce-backend.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/ecommerce-backend/issues"
  },
  "homepage": "https://github.com/your-username/ecommerce-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@types/mongoose": "5.11.97",
    "@types/node": "20.6.5",
    "eslint": "8.44.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.6.4",
    "nodemon": "3.0.1",
    "prettier": "3.0.2",
    "ts-jest": "29.1.5",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.1",
    "mongoose": "7.5.2",
    "morgan": "1.10.0",
    "redis": "4.6.8",
    "stripe": "13.4.0",
    "kafkajs": "2.2.4"
  },
  "pnpm": {
    "overrides": {
      "react-router-dom": "6.18.0"
    }
  }
}
